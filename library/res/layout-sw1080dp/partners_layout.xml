<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.hitv.android.uiversion2.custom.TypeTextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/color_43474A"
        android:text="@string/patners"
        android:layout_marginBottom="25dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="48dp"
        >
        <com.hitv.android.uiversion2.custom.TypeTextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="30dp"
            android:textColor="@color/color_FE1542"
            android:text="@string/xinghao"
            />
        <com.hitv.android.uiversion2.custom.TypeTextView 
            android:id="@+id/partners_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/color_ECECEC"
            />
    </LinearLayout>
    
    <com.hitv.android.uiversion2.custom.FlowLayout 
        android:id="@+id/partners_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.hitv.android.uiversion2.custom.FlowLayout>

</LinearLayout>