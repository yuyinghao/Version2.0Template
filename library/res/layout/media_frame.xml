<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round"
    android:orientation="vertical"
    android:padding="@dimen/mRlContent_paddingRight"
    android:visibility="invisible" >

    <TextView
        android:id="@+id/media_frame_tv"
        android:layout_width="@dimen/qr_title_width"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="@dimen/qr_title_textsize" />

    <FrameLayout
        android:layout_width="@dimen/three_hundred_dp"
        android:layout_height="@dimen/three_hundred_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@drawable/builder_qr_background" >

        <ImageView
            android:id="@+id/media_frame_qr"
            android:layout_width="@dimen/qr_title_width"
            android:layout_height="@dimen/qr_title_width"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/media_frame_qr_icon"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>