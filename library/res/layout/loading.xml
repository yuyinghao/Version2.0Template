<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/mProgress_circle"
        android:layout_width="@dimen/progressbar_width"
        android:layout_height="@dimen/progressbar_height"
        android:layout_centerInParent="true"
        android:indeterminateDuration="1200" />

    <TextView
        android:id="@+id/notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/notice_tv_marginTop"
        android:text="@string/loading_notice"
        android:textSize="@dimen/notice_tv_textSize" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/linearlayout_marginTop"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/comming_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_notice_second"
            android:textSize="@dimen/comming_up_tv_textSize" />

        <TextView
            android:id="@+id/media_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/comming_up_tv_textSize" />
    </LinearLayout> 

</RelativeLayout>