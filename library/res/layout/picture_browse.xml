<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.hitv.android.uiversion2.custom.ImageViewPager
        android:id="@+id/picture_browse_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/picture_browse_page_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/forty_one_dp"
        android:gravity="center"
        android:textColor="#ECECEC"
        android:textSize="@dimen/notice_tv_textSize" />

    <ImageView
        android:id="@+id/picture_browse_dir_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/forty_dian_eight_dp"
        android:src="@drawable/arrow_1" />

    <ImageView
        android:id="@+id/picture_browse_dir_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/forty_dian_eight_dp"
        android:src="@drawable/arrow_2" />

</FrameLayout>