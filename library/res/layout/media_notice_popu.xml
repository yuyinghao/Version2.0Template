<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round"
    android:paddingBottom="@dimen/seventeen_dp"
    android:paddingLeft="@dimen/listmain_righticon_marginRight"
    android:paddingRight="@dimen/listmain_righticon_marginRight"
    android:paddingTop="@dimen/seventeen_dp" >

    <!-- 展现当前播放进度时间的文本框 -->

    <TextView
        android:id="@+id/dialog_seek_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/qr_title_textsize" />

</RelativeLayout>