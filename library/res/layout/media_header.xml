<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_hundred_thirty_dp"
    android:background="@drawable/header_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/media_state"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/three_dp"
        android:layout_marginLeft="@dimen/sixty_dp" />

    <TextView
        android:id="@+id/media_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listmain_lefticon_marginLeft"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/forty_eight_dp" />

</LinearLayout>