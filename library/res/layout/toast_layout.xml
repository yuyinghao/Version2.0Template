<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/back_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/video_15_px"
        android:background="@drawable/bg_round"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/video_20_px"
        android:paddingLeft="@dimen/video_30_px"
        android:paddingRight="@dimen/video_30_px"
        android:paddingTop="@dimen/video_20_px" >

        <com.hitv.android.uiversion2.custom.TypeTextView
            android:id="@+id/back_notice_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toast_press"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/video_30_px" />

        <ImageView
            android:id="@+id/back_notice_icon"
            android:layout_width="@dimen/video_42_px"
            android:layout_height="@dimen/video_42_px"
            android:layout_marginLeft="@dimen/video_10_px"
            android:layout_marginRight="@dimen/video_10_px"
            android:src="@drawable/toast_icon" />

        <com.hitv.android.uiversion2.custom.TypeTextView
            android:id="@+id/back_notice_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toast_press_back"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/video_30_px" />
    </LinearLayout>
</RelativeLayout>
