<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <com.hitv.android.uiversion2.custom.TypeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/color_43474A"
        android:text="@string/information"
        android:layout_marginBottom="20dp"
        />
    
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:shrinkColumns="1"
        >
        <TableRow>
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_promotiontitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_777777"
		        android:text="@string/promotion"
		        android:layout_marginBottom="20dp"
            	android:layout_marginRight="33dp"
            	android:visibility="gone"
                />
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_promotionvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_F5A623"
		        android:layout_marginBottom="20dp"
            	android:visibility="gone"
                />
        </TableRow>
        <TableRow>
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_openinghourstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_777777"
		        android:text="@string/openinghours"
		        android:layout_marginBottom="20dp"
            	android:layout_marginRight="33dp"
            	android:visibility="gone"
                />
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_openinghoursvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_ECECEC"
		        android:layout_marginBottom="20dp"
            	android:visibility="gone"
                />
        </TableRow>
        <TableRow>
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_telephonetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_777777"
		        android:text="@string/telephone"
		        android:layout_marginBottom="20dp"
            	android:layout_marginRight="33dp"
            	android:visibility="gone"
                />
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_telephonevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_ECECEC"
		        android:layout_marginBottom="20dp"
            	android:visibility="gone"
                />
        </TableRow>
        <TableRow>
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_addresstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_777777"
		        android:text="@string/address"
            	android:layout_marginRight="33dp"
            	android:visibility="gone"
                />
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/information_addressvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		        android:textSize="20dp"
		        android:textColor="@color/color_ECECEC"
            	android:visibility="gone"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>