<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="585dp">
    
    <RelativeLayout 
        android:id="@+id/titleicon"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:clipChildren="false"
        android:layout_marginBottom="60dp"
        ></RelativeLayout>
    
    <ImageView 
        android:id="@+id/title_lefticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="344dp"
        android:src="@drawable/arrow_1"
        />
    
    <ImageView 
        android:id="@+id/title_righticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:layout_marginTop="344dp"
        android:src="@drawable/arrow_2"
        />
    
    <RelativeLayout 
        android:id="@+id/titledetail"
        android:layout_width="795dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_marginBottom="4.7dp"
        android:layout_below="@id/titleicon"
        >
        <com.hitv.android.uiversion2.custom.TypeTextView
            android:id="@+id/titletext"
            android:layout_width="567dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="33dp"
            android:lineSpacingExtra="6.7dp"
            android:textColor="@color/color_ECECEC"
            android:layout_centerVertical="true"
            layout:type="1"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
            <LinearLayout 
                android:id="@+id/ratinglayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="36dp"
                ></LinearLayout>
            <com.hitv.android.uiversion2.custom.TypeTextView
                android:id="@+id/pagecurrentpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/color_ECECEC" 
                layout:nochange="true"
                layout:type="0"
                />
            <com.hitv.android.uiversion2.custom.TypeTextView
                android:id="@+id/pageseprate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/color_ECECEC" 
                android:text="@string/pageseprate"
                layout:nochange="true"
                layout:type="0"
                />
            <com.hitv.android.uiversion2.custom.TypeTextView 
                android:id="@+id/pagetotalpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/color_ECECEC"
                layout:nochange="true"
                layout:type="0"
                />
        </LinearLayout>

    </RelativeLayout>
    
    <com.hitv.android.uiversion2.custom.FlowLayout 
        android:id="@+id/specaillayout"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@id/titledetail"
        android:layout_marginLeft="242dp"
        ></com.hitv.android.uiversion2.custom.FlowLayout>

</RelativeLayout>